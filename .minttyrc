### 基本環境
Locale=ja_JP
Charset=UTF-8


### windowsサイズ
Columns=200
Rows=25
Transparency=low


### キー関連
BackspaceSendsBS=yes
RightClickAction=paste
ClicksTargetApp=no
# 範囲選択はコピー
CopyOnSelect=yes


### font等
# 英字、記号ともにはっきりしててみやすい
# Font=Ricty Diminished
Font=Ricty Diminished Discord
# qg の区別がつかなくて微妙だった
#Font=Cascadia Code
# 記号の見た目がちょっと好みと違った
#Font=Fira Code
BoldAsFont=no
FontHeight=10
FontIsBold=no
FontSmoothing=default


### 色
