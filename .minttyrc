### 基本環境
Locale=ja_JP
Charset=UTF-8


### windowsサイズ
Columns=170
Rows=40

### キー関連
BackspaceSendsBS=yes
RightClickAction=paste
ClicksTargetApp=no
# 範囲選択はコピー
<!-- CopyOnSelect=yes -->


### font等
# 英字、記号ともにはっきりしててみやすい
# Font=Ricty Diminished
Font=Ricty Diminished Discord
# qg の区別がつかなくて微妙だった
#Font=Cascadia Code
# 記号の見た目がちょっと好みと違った
#Font=Fira Code
BoldAsFont=no
FontHeight=10
FontIsBold=no
FontSmoothing=default


### 色
Term=xterm-256color

# カラーパターン。透明度はテーマで指定する
# 外部サイトからテンプレをコピって貼り付けること
### https://github.com/AlexAkulov/putty-color-themes/blob/master/images/readme.md
ThemeFile=mytheme2

### カーソル
CursorType=block
CursorBlinks=yes

### スクロール
Scrollbar=none

### 背景画像
Background=~/dotfiles/image/wallpaper.jpg,70

### Beep 音
BellType=2
BellFlash=yes
BellPopup=yes
Transparency=off
